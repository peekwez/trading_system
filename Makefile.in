define _info
      @tput setaf 6
      @tput bold
      @echo
      @echo -ne '-- '
      @tput smul
      @echo $1
      @echo
      @tput sgr0
endef

define _error
      @tput setaf 1
      @tput bold
      @echo
      @echo -ne '-- '
      @tput smul
      @echo XX $1
      @echo
      @tput sgr0
endef
